/**app.wxss**/
 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.item-nav{
  min-width: 200rpx;
  text-align: center;
  height: 100vh;
}
.nav-item{
  background: #F6F6F6;
  color: #2b2b2b;
  height:100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.active{
  background: #fff;
  color: #42c642;
}
.source-content{
  display: flex;
  flex-direction: column;
  height: 100vh;
  align-content: flex-start;
  justify-content: flex-start;
  background-color: #fff;
  word-break: break-all;
}
.source-item{
 padding: 20rpx;
 font-size: 28rpx;
 border-bottom: 1rpx solid #F6F6F6;
}
.source-name{
  font-weight: bold;
  margin-bottom: 10rpx;
}

.help-tip-title{
  margin-top: 100rpx;
  width:100%;
  text-align:center;
  font-weight: bold;
}
.help-tip{
  width:100%;
  text-align:center;
  color: #7a7a7a;
  margin-top: 30rpx;
}
.share-btn{
  margin-top: 50rpx;
}
