/**app.wxss**/
 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


.help-tip-title{
  margin-top: 100rpx;
  width:100%;
  text-align:center;
  font-weight: bold;
}
.help-tip{
  width:100%;
  text-align:center;
  color: #7a7a7a;
  margin-top: 30rpx;
}
.share-btn{
  margin-top: 50rpx;
}

/**form**/
.ux-form{
  width: 90%;
}
.form-group{
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #dfdfdf;
}
.form-label{
  color: #191919;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  letter-spacing: 1rpx;
}
.form-control{
  height: 60rpx;
  line-height: 60rpx;
  color: #191919;
  font-size: 32rpx;
  flex: 1;
}
.form-name{
  color: #7f7f7f;
  height: 40rpx;
  line-height: 60rpx;
  width: 180rpx;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}
.form-icon{
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  right: 60rpx;
  margin-top: 10rpx;
}
.form-btn{
  margin-top: 60rpx;
  letter-spacing: 2rpx;
}
