.container {
 min-height: 100vh;
 background: #F6F6F6;
 display: flex;
 flex-direction: row;
}

.item-nav{
 min-width: 200rpx;
 text-align: center;
 height: 100vh;
}
.nav-item{
 background: #F6F6F6;
 color: #2b2b2b;
 height:100rpx;
 line-height: 100rpx;
 font-size: 28rpx;
 font-weight: bold;
}
.active{
 background: #fff;
 color: #42c642;
}
.source-block{
 display: flex;
 flex-direction: column;
 height: 100vh;
 align-content: flex-start;
 justify-content: flex-start;
 background-color: #fff;
 word-break: break-all;
 padding:0rpx 10rpx;
}
.source-item{
 padding: 20rpx;
 font-size: 28rpx;
 border-bottom: 1rpx solid #e8e8e8;
}

.source-name{
 height: 60rpx;
 display: flex;
 flex-direction: row;
 align-items: center;
 font-weight: bold;
}
.source-name .icon{
 width: 16px;
 height: 16px;
 flex-shrink: 0;
 margin-right: 15rpx;
 border-radius: 5rpx;
}

.source-img{
 width: 100%;
 height: 200rpx;
 border-radius: 10rpx;
 margin-top: 10rpx;
}

.source-content{
 margin-top: 20rpx;
}

.source-btn-block{
 display: flex;
 justify-content: flex-start;
 flex-direction: row;
 margin-top: 40rpx;
 margin-bottom: 50rpx;
}

