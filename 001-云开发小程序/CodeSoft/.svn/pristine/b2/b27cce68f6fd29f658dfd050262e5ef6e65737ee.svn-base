.container {
 display: flex;
 flex-direction: column;
 box-sizing: border-box;
 align-items: center;
 padding: 10rpx 20rpx;
} 
.userinfo-block{
 width: 100%;
 display: flex;
 flex-direction: row;
 justify-content: center;
 align-items: center;
}
.user-avatar{
 width: 120rpx;
 height: 120rpx;
 border-radius: 50%;
 overflow:hidden;
 object-fit: cover;
 display: block;
 margin: 0px 10px;
}

.user-nickname{
 letter-spacing: 1px;
}

/**
*日历
**/
.calendar-content-block{
 margin-top: 10px;
 width: 100%;
 display: flex;
 flex-direction: column;
 align-items: center;
}
.calendar-block-week{
 width: 100%;
 display: flex;
 flex-direction:row;
 justify-content: flex-start;
 align-items: center;
 height: 35px;
 line-height: 35px;
 background-color: #e3e3e3;
}
.calendar-weekday{
 width: 14.25%;
 height: 35px;
 line-height: 35px;
 text-align: center;
 font-weight: bold;
 font-size: 18px;
}

.calendar-block{
 margin-top: 10px;
 width: 100%;
 display: flex;
 flex-direction:row;
 flex-wrap: wrap;
 justify-content: flex-start;
 align-items: center;
}
.calendar-day-item{
 width: 14.25%;
 height: 50px;
 text-align: center;
 display: flex;
 flex-direction: column;
 justify-content: flex-start;
 align-items: flex-start;
 margin-bottom: 3px;
}
.calendar-day{
 width: 100%;
 height: 40px;
 line-height: 40px;
 text-align: center;
}
.calendar-day-step{
 width: 100%;
 font-size: 12px;
 text-align: center;
 color: #ff7e38;
 margin-top: -15rpx;
}

.curdate-block{
 margin-top:20rpx;
 display: flex;
 flex-direction: row;
 justify-content: center;
 width: 100%;
 font-weight: bold;
}
.nav-text{
 text-align: center;
 color: #ff7e38;
 margin: 0rpx 4rpx;
}

.color-red{
 color: #ff7e38;
}

.share-block{
 display: flex;
 flex-direction: row;
 align-items: center;
 margin-top: 60rpx;
}
.pyq-btn{
 display: flex;
 flex-direction: row;
 background-color: #fa5151;
 align-items: center;
 color: #fff;
 margin:0px;
}
.pyq-btn image{
 width:32rpx;
 height:32rpx;
 flex-shrink:0;
 margin-right:5rpx;
}

/*弹出层样式*/  
.drawer_screen {  
 width: 100%;  
 height: 100%;  
 position: fixed;  
 top: 0;  
 left: 0;  
 z-index: 1000;  
 overflow: hidden;  
 background-color: #a1a1a1;
}
.drawer_box {  
 width: 100%;
 height:100%;
 display: flex;
 flex-direction: column;
 justify-content:center;
 overflow: hidden;  
 position: fixed;  
 bottom: 0px; 
 z-index: 1001;  
 text-align: center;
 background-color: #a1a1a1;
} 
.drawer_content_box{
 width: 100%;
 height: 100%;
 display: flex;
 flex-direction: column;
 align-items: center;
}
.drawer_content{
 margin-top: 20px;
 height: 500px;
 width: 100%;
 display:flex;
flex-direction:row;
 justify-content: center;
 flex-wrap: wrap;
}
.drawer_content image{
 width: 100%;
 height: 100%;
}

.drawer_btn_block{
 margin-top: 15px;
 width: 100%;
 align-items: center;
 justify-content: center;
 display:flex;
 flex-direction:column;
}
.save-img{
 background-color: #40d07f;
 color: #FFFFFF;
}
.drawer_content_canvas{
 margin-top: 500px;
 width: 1308px;
 height: 1800px;
}

.hidden-view{
 display: none;
}
