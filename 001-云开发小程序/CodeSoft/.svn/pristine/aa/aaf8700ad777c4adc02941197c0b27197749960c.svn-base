
.container{
  background-color: #fff;
  height: 100vh;
}
.user-header{
   width: 100%;
   padding: 20rpx 0rpx;
   display: flex;
   flex-direction: row;
   align-content: center;
   justify-content:center;
}
.user-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow:hidden;
  object-fit: cover;
  display: block;
  margin: 0px 40rpx;
  border: 2rpx solid #FFF;
}
.user-info{
  margin-top: 36rpx;
}
.user-nickname{
  font-size: 36rpx;
  letter-spacing: 3rpx;
}
