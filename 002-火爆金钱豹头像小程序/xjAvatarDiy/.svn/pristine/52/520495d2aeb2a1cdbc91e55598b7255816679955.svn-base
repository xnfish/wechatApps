.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #e1c2ae;
}
.logo {
  position: fixed;
  top:20rpx;
  display: block;
  width:150rpx;
  height:150rpx;
}
.hint {
  width: 100%;
  font-size: 36rpx;
  text-align: center;
  color: black;
}
.avatar-block{
  margin-top:40rpx;
}
.scrollView {
  width: 100%;
  position: absolute;
  bottom: 0px;
  white-space: nowrap;
  background-color: #da523d;
}
.diy-img {
  display: inline-block;
  flex-direction: column;
  position: relative;
  width: 150rpx;
  margin: 10rpx 6rpx 6rpx 6rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.diy-img image {
  height: 140rpx;
  width: 140rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.active {
  border: 6rpx solid #CEC5E1;
}
button{
  margin-top:30rpx;
}
.btn-block{
  display: flex;
  flex-direction: row;
}